@model Register

@{
    ViewData["Title"] = "Register Page";
}

<h1>Auth App</h1>
<h3>Register</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group input-group flex-nowrap mb-3"> 
                <label asp-for="Name">
                    <span class="input-group-text" id="addon-wrapping">
                        <i class="bi bi-person-fill"></i>
                    </span>
                </label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
            </div>
            <div class="form-group input-group flex-nowrap mb-3">
                <label asp-for="Email">
                    <span class="input-group-text" id="addon-wrapping">
                        <i class="bi bi-envelope-fill"></i>
                    </span>
                </label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group input-group flex-nowrap mb-3">
                <label asp-for="Password">
                    <span class="input-group-text" id="addon-wrapping">
                        <i class="bi bi-file-lock2"></i>
                    </span>
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary mb-3">Register</button>
        </form>
    </div>
</div>

<small>Or continue with these social profiles</small>
<div>
    <a class="btn btn-dark" href="#"><i class="bi bi-google"></i> Google</a>
</div>
<small>Already a member? <a asp-action="Login" asp-controller="Auth">Login</a></small>
